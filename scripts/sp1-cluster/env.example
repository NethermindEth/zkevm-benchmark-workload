# SP1 Cluster Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_USER=sp1
POSTGRES_PASSWORD=sp1password
POSTGRES_DB=sp1_cluster
POSTGRES_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PORT=6379

# =============================================================================
# SP1 API Configuration
# =============================================================================
API_PORT=8080

# =============================================================================
# SP1 Coordinator Configuration
# =============================================================================
COORDINATOR_PORT=50051

# =============================================================================
# Worker Configuration
# =============================================================================
# Number of GPU workers (0 for CPU-only mode)
GPU_NODES=1

# CPU worker settings (used when GPU_NODES=0)
CPU_THREADS=0  # 0 = use all available cores
CPU_WORKER_MEMORY=16G

# GPU settings
CUDA_VISIBLE_DEVICES=all

# =============================================================================
# Logging
# =============================================================================
# Options: trace, debug, info, warn, error
RUST_LOG=info

# =============================================================================
# SP1 Cluster Repository
# =============================================================================
# Path to sp1-cluster repository (relative to this directory)
SP1_CLUSTER_PATH=./sp1-cluster

# SP1 Cluster Git Repository
SP1_CLUSTER_REPO=https://github.com/succinctlabs/sp1-cluster.git
SP1_CLUSTER_BRANCH=main
